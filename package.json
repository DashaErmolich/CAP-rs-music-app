{
  "name": "cap-rs-music-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/html5-app-deployer": "^5.0.0",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0.6.0",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/approuter": "^14.3.2",
    "@sap/cds-dk": "^7",
    "@sap/html5-repo-mock": "^2.1.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch:hybrid": "cds watch --profile hybrid",
    "hana-deploy:hybrid": "cds deploy --to hana --profile hybrid",
    "clean": "npx rimraf mta_archives resources",
    "build": "npm run clean && mbt build",
    "deploy": "cf deploy mta_archives/btp-webapp_1.0.0.mtar",
    "build-btp": "npm run clean-btp && ng build --configuration production && npm run zip",
    "zip": "cd dist/ && npx bestzip ../music-app-content.zip * ../manifest.json",
    "clean-btp": "npx rimraf music-app-content.zip dist"
  },
  "cds": {
    "requires": {
      "[hybrid]": {
        "db": "hana"
      },
      "auth": "xsuaa"
    }
  }
}
